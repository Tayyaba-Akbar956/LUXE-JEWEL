# Supabase Configuration
# Required for authentication and database connection
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key

# Payment Configuration (Mock)
# Set to 'true' to simulate successful payments without Stripe
NEXT_PUBLIC_ENABLE_MOCK_PAYMENT=true
# (Optional) Stripe keys may be added later if needed
# NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=
# STRIPE_SECRET_KEY=
# STRIPE_WEBHOOK_SECRET=

# AI Services (Gemini)
# Required for AI features (e.g., image search, embeddings)
GOOGLE_API_KEY=your_google_api_key

# App Configuration
# Base URL for the application (useful for auth redirects, etc.)
NEXT_PUBLIC_APP_URL=http://localhost:3000
